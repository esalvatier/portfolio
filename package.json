{
  "name": "mesalv-portfolio-react",
  "version": "1.0.0",
  "description": "Portfolio created with React",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "server": "nodemon index.js --ignore client",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esalvatier/portfolio-R.git"
  },
  "author": "Mark Erik Salvatier",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/esalvatier/portfolio-R/issues"
  },
  "homepage": "https://github.com/esalvatier/portfolio-R#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "mongoose": "^5.4.15",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10"
  }
}
